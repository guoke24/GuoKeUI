<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".smallapp.SmallAppRecyclerView2Activity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_item_list2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_add"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="头增加"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_tail"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/btn_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="头删除"
        app:layout_constraintTop_toTopOf="@+id/btn_add"
        app:layout_constraintLeft_toRightOf="@+id/btn_add"
        />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更新"
        app:layout_constraintTop_toTopOf="@+id/btn_add"
        app:layout_constraintLeft_toRightOf="@+id/btn_remove"
        />

    <Button
        android:id="@+id/btn_add_tail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="尾增加"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/btn_remove_tail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="尾删除"
        app:layout_constraintTop_toTopOf="@+id/btn_add_tail"
        app:layout_constraintLeft_toRightOf="@+id/btn_add_tail"
        />



</androidx.constraintlayout.widget.ConstraintLayout>