<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guohao.guokeui.TestStrokMoveActivity">

    <com.guohao.guokeui.view.ViewWithLiveRingWave
        android:id="@+id/view_circle"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:background="#66999999"
        />

    <com.guohao.guokeui.view.ImageVIewWithStrok
        android:id="@+id/img_stroke"
        android:layout_width="224dp"
        android:layout_height="224dp"
        app:layout_constraintTop_toBottomOf="@+id/view_circle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        />

    <Button
        android:id="@+id/btn_move"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="动/停"
        app:layout_constraintTop_toTopOf="@+id/img_stroke"
        app:layout_constraintLeft_toLeftOf="@+id/img_stroke"
        app:layout_constraintRight_toRightOf="@+id/img_stroke"
        app:layout_constraintBottom_toBottomOf="@+id/img_stroke"
        />

</androidx.constraintlayout.widget.ConstraintLayout>